{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "bundler",
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/webview/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@agents/*": [
                "src/agents/*"
            ],
            "@extension/*": [
                "src/extension/*"
            ],
            "@components/*": [
                "src/webview/components/*"
            ],
            "@views/*": [
                "src/webview/views/*"
            ],
            "@utils/*": [
                "src/webview/utils/*"
            ],
            "@types/*": [
                "src/types/*"
            ]
        },
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "types": [
            "vscode",
            "node",
            "better-sqlite3"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}